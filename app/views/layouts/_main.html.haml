.chat__main
  .chat__main__header
    .chat__main__header__group
      %h2.chat__main__header__group__title= group.name
      %ul.chat__main__header__group__members
        %p Members：
        - group.users.each do |member|
          %li.chat__main__header__group__members__member
            = member.name
    %p.chat__main__header__edit
      = link_to "Edit", edit_group_path(group)
  .chat__main__body
    %ul.chat__main__body__messages
      %li.chat__main__body__messages__message
        %p.chat__main__body__messages__message__name yasuyuki
        %p.chat__main__body__messages__message__time 2017/10/10 08:20:00
        %p.chat__main__body__messages__message__body わああああい！
      %li.chat__main__body__messages__message
        %p.chat__main__body__messages__message__name yasuyuki
        %p.chat__main__body__messages__message__time 2017/10/10 09:20:00
        %p.chat__main__body__messages__message__body やったああああ！
  .chat__main__footer
    = form_for [group, message] do |f|
      .form__window
        = f.text_field :body, placeholder: "type a message"
        %button
          %i.fa.fa-picture-o
      = f.submit "Send", id: "submit"
